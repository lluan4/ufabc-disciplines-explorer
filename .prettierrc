{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 120,
  "semi": true,
  "tabWidth": 2,
  "endOfLine": "auto",

  "plugins": ["@trivago/prettier-plugin-sort-imports"],

  "importOrder": [
    "^react$",
    "<THIRD_PARTY_MODULES>",

    "^@/shared/(.*)$",
    "^@/entities/(.*)$",
    "^@/features/(.*)$",
    "^@/widgets/(.*)$",
    "^@/pages/(.*)$",
    "^@/app/(.*)$",

    "^[./]",
    "\\.s?css$"
  ],

  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
